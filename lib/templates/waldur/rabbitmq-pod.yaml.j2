---
apiVersion: v1
kind: ConfigMap
metadata:
  name: rabbitmq-config
data:
  rabbitmq.conf: |
    ## Clustering
    cluster_partition_handling = ignore

    ## Defaults
    # During the first start, RabbitMQ will create a vhost and a user
    # These config items control what gets created
    default_permissions.configure = .*
    default_permissions.read = .*
    default_permissions.write = .*
    log.console = true
    default_vhost = /
    default_user = $(RABBITMQ_USERNAME)
    default_pass = $(RABBITMQ_PASSWORD)

    ## Networking
    listeners.tcp.default = 5672

    ## Management
    management.tcp.ip = 0.0.0.0
    management.tcp.port = 15672
    loopback_users = none

    ## Resource limits
    # Set a free disk space limit to 1GB. When below this limit, RabbitMQ will stop accepting new connections.
    disk_free_limit.absolute = 1GB
---
apiVersion: v1
kind: Pod
metadata:
  name: waldur-queue
spec:
  containers:
  - name: rabbitmq
    image: "docker.io/bitnami/rabbitmq:4.0.2-debian-12-r0"
    env:
    - { name: RABBITMQ_USERNAME, value: "waldur" }
    - { name: RABBITMQ_PASSWORD, value: "waldur" }
    - { name: RABBITMQ_PLUGINS, value: "rabbitmq_mqtt rabbitmq_web_mqtt rabbitmq_management rabbitmq_web_stomp rabbitmq_stomp" }
    volumeMounts:
    - { name: rabbitmq-conf, subPath: rabbitmq.conf, mountPath: "/etc/rabbitmq/rabbitmq.conf:Z" }
  volumes:
  - name: rabbitmq-conf
    configMap:
      name: rabbitmq-config
